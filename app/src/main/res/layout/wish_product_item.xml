<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="225dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/image_product_sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name_and_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="간편 수박, 한입 수박"
                android:textSize="16sp"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="24,650원"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/wish_delete_btn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="삭제"
                    android:textSize="14sp"
                    android:textColor="#aad94844"
                    app:strokeColor="#aad94844" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp"/>

                <Button
                    android:id="@+id/wish_cart_btn"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="장바구니 넣기"
                    android:textColor="#A0DE5F"
                    app:strokeColor="#A0DE5F" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>